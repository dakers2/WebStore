@model WebStore.Models.ProductModel 
@{
    ViewBag.Title = Model.Name;
    string imgURL = Model.Image;
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-4">
            <img src=@imgURL />
        </div>
        <div class="col-sm-12 col-md-8">
            <h2>@Model.Name</h2>
            <p>@Model.Description</p>
            <h3>@Model.Price.ToString("c")</h3>
            @using(Html.BeginForm())
            {
                @Html.HiddenFor(m => m.Description)
                @Html.HiddenFor(m => m.Name)
                @Html.HiddenFor(m => m.Price)
                <fieldset>
                    <div class="form-group">
                    @Html.LabelFor(m => m.Quantity)
                    @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control", value = 1} // TODO: check if value can be used this way) 
                    </div>
                </fieldset>
                <input type="submit" class="btn btn-primary" title="Add To Cart"/>
            }
        </div>
    </div>   
</div>
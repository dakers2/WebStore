@model List<WebStore.Models.ProductModel>
@{
    ViewBag.Title = "Index";
}

<h2>Products</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 product">
            @* // TODO: add link to product page on prod image*@
            <a href="#"><img src="@item.Image" /></a>
            <h3>@item.Name</h3>
            <p>@item.Price.ToString("c")</p>
        </div>
    }
</div>
